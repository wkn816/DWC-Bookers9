<div class="container px-5 px-sm-0">
    <h2><%= @user.name %> さんとのチャット</h2>
    <div class="row">
        <div class="col-md-3">
            <!-- 相手からのチャット内容表示 -->
            <%= render 'chats/list', chats: @recieved %>
            <!-- チャットを投稿 -->
            <%= form_with url: chats_path, remote: true do |f| %>
                <%= f.hidden_field :room_id, :value => @room.id %>
                <%= f.text_area :message, autofocus: true, class:"form-control", id: "chat-form" %>
                <%= f.submit "送信", class: "btn btn-success" %>
            <% end %>
        </div>
        <div class="col-md-8 offset-md-1">
            <!-- 自分から相手へのチャットを表示　-->
            <div class="chat-list">
                <%= render 'chats/list', chats: @chats %>
            </div>
        </div>
    </div>
</div>

